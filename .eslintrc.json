{
  "extends": ["eslint:recommended"],
  "plugins": ["googleappsscript"],
  "parserOptions": {},
  "env": {
    "googleappsscript/googleappsscript": true
  },
  "globals": {
    // Google Apps Script
    "console": true,
    // External Libraries
    "GasTap": true,
    "Moment": true,
    // Our classes
    "MagicPodClient": true
  },
  "rules": {
    "semi": "warn",
    "quotes": ["warn","single"],
    "indent": ["warn",2],
    "space-before-blocks": ["warn",{
        "functions": "always"
      }
    ],
    "no-console": "off"
  }
}
